# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Database (Replit PostgreSQL)
DATABASE_URL=your_database_url

# Groq AI API
GROQ_API_KEY=your_groq_api_key

# Stripe Payments
STRIPE_SECRET_KEY=your_stripe_secret_key
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Email Configuration (REQUIRED for email applications - 30-40% of jobs)
# SECURITY: Never commit actual credentials! Use Replit Secrets instead.

# Option 1: Gmail (Free but requires app-specific password)
# Get app password: https://support.google.com/accounts/answer/185833
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_specific_password
EMAIL_FROM=your_email@gmail.com

# Option 2: Resend.com (Recommended for production - R200/month)
# Professional email service with better deliverability
# SMTP_HOST=smtp.resend.com
# SMTP_PORT=465
# EMAIL_USER=resend
# EMAIL_PASSWORD=your_resend_api_key
# EMAIL_FROM=applications@yourdomain.com

# Option 3: SendGrid (Alternative - Free tier: 100 emails/day)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# EMAIL_USER=apikey
# EMAIL_PASSWORD=your_sendgrid_api_key
# EMAIL_FROM=applications@yourdomain.com

# Session Secret
SESSION_SECRET=your_random_secret_key_here
